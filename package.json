{
  "name": "kanColleWidget",
  "version": "2.0.45",
  "description": "KanColleWidget for Chrome/Firefox",
  "engines": {
    "node": "7.5.0"
  },
  "scripts": {
    "lint": "eslint src",
    "postinstall": "./node_modules/.bin/coffee ./scripts/postinstall.coffee",
    "test": "eslint src && jest --no-cache",
    "build": "webpack --progress",
    "releasenote": "./node_modules/.bin/coffee ./scripts/releasenote.coffee --out",
    "release": "./node_modules/.bin/coffee ./scripts/prerelease.coffee && npm run build-release",
    "build-release": "rm -rf release dest/js && mkdir -p release/kcwidget && NODE_ENV=production webpack && cp -r dest release/kcwidget && cp manifest.json release/kcwidget && cp chrome_ex_oauth.html release/kcwidget && zip -r release/kcwidget.zip release/kcwidget/*",
    "x": "rm -rf node_modules/chomex && cp -r ~/proj/js/chomex node_modules && npm run build",
    "fetch-wiki": "./node_modules/.bin/coffee ./scripts/fetch-wiki.coffee",
    "start": "webpack --watch --progress"
  },
  "repository": "git+https://github.com/otiai10/kanColleWidget.git",
  "author": "otiai10",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otiai10/kanColleWidget/issues"
  },
  "homepage": "https://github.com/otiai10/kanColleWidget#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "base64-image-loader": "^1.0.0",
    "cheerio-httpcli": "^0.6.9",
    "chomex": "^1.0.2",
    "coffee-script": "^1.12.5",
    "colors": "^1.1.2",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "file-loader": "^0.11.1",
    "jest-cli": "^19.0.2",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "lodash": "^4.17.2",
    "material-ui": "^0.17.0",
    "moment": "^2.18.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-tap-event-plugin": "^2.0.1",
    "recharts": "^0.22.3",
    "shelljs": "^0.7.7",
    "url-loader": "^0.5.7",
    "webpack": "^2.4.1",
    "worker-loader": "^0.8.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "tests/.*-test\\.js$",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/chomex"
    ],
    "setupFiles": [
      "./tests/mock/chrome.js",
      "./tests/mock/URLSearchParams.js",
      "./tests/mock/localStorage.js"
    ]
  }
}
